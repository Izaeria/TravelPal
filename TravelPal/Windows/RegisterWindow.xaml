<Window x:Class="TravelPal.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal.Windows"
        mc:Ignorable="d"
         Title="RegisterWindow" Height="450" Width="800" FontFamily="Arial" Background="MintCream">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>


        <Image Source="/Images/travelpal-logo.png"  Grid.Column="2" Grid.Row="1" Height="100px"/>
        
        <TextBlock Grid.Column="2" Grid.Row="2" FontSize ="18" Text="Choose your Username" Margin="0,0,0,5" HorizontalAlignment="Center" />
        <TextBox Name="txtUsername" Grid.Column="2" Grid.Row="3" Width="150" />

        <Label Grid.Column="2" Grid.Row="4" FontSize ="18" Content="Password" Margin="0,0,0,5" HorizontalAlignment="Center" />
        <PasswordBox x:Name="txtPassword" Grid.Column="2" Grid.Row="5" Width="150"/>

        <Label Grid.Column="2" Grid.Row="6" FontSize ="18" Content="Confirm Password" Margin="0,0,0,5" HorizontalAlignment="Center" />
        <PasswordBox x:Name="txtConfirmPassword" Grid.Column="2" Grid.Row="7" Width="150"/>

        <TextBlock Grid.Column="2" Grid.Row="8" FontSize ="18" Text="Country of Origin" Margin="0,0,0,5" HorizontalAlignment="Center" />
        <ComboBox Name="cmbCountry" Grid.Column="2" Grid.Row="9" Height="20"  />

        <Button x:Name="RegisterBtn" Content="Register" Click="RegisterBtn_Click" Grid.Column="2" Grid.Row="10" Width="100" Margin="5" Background="#7B68EE" BorderBrush="#7B68EE" Foreground="MintCream"/>
        <Button x:Name="goBackBtn" Content="Go back to previous page" Click="goBackBtn_Click" Grid.Column="3" Grid.Row="10" FontSize="10" Margin ="5" Width="150" HorizontalAlignment="center" Background="#7B68EE" BorderBrush="#7B68EE" Foreground="#F5FFFA"/>

    </Grid>
</Window>
